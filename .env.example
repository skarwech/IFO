# API Environment Variables
# Copy to .env and fill in values

# API Configuration
API_TITLE=IFO Backend API
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://aquaoptai.vercel.app

# IFO Configuration
IFO_CONFIG_PATH=./config.yaml
DATA_DIR=./data
RESULTS_DIR=./results

# Optimization
DEFAULT_HORIZON=96
MAX_HORIZON=288

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379

# Optional: Database
# DATABASE_URL=postgresql://user:password@localhost/ifo

# Optional: Security
# API_KEY=your-api-key-here
# SECRET_KEY=your-secret-key-here
